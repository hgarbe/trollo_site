<body>
<h1 class="ui header"><%= @board.name %></h1>
<%= link_to "Edit Board", edit_board_path(@board), class: "ui orange button inverted" %>
<%= link_to "Delete Board", @board, method: :delete, class: "ui red button inverted" %>
<%= link_to 'New List', new_board_list_path(@board), class: "ui green button inverted" %>
<div class="ui divider"></div>

<div class="ui three column grid">
  <% @board.lists.sort.each do |list| %>
  <div class="column">
    <div class="ui fluid card">
      <div class="ui raised center aligned segment">
        <h3><%= list.title %></h3>
      
        <%= link_to 'New Task', new_list_task_path(list), class:"ui mini green button inverted" %>
        <div class="ui divider"></div>
          <% list.tasks.sort_by(&:priority).each do |task| %>
          <div class="five wide column">
            <div class="ui raised center aligned segment">
              <h3><%= task.title %></h3>
              <div class="ui divider"></div>
              <p><%= task.description%></p>
              <%= link_to "Edit Task", edit_task_path(task), class: "ui mini orange button inverted" %>
              <%= link_to "Delete Task", task_path(task), method: :delete, class: "ui mini red button inverted" %>
                </div>
              </div>
            <%end%>
            <div class="ui divider"></div>
          <%= link_to "Edit List", edit_board_path(@board, list), class: "ui mini orange button inverted" %>
          <%= link_to "Delete List", list, method: :delete, class: "ui mini red button inverted" %>
              </div>
      </div>
    </div>
  <% end %>
</div>
<br>
<br>
</body>