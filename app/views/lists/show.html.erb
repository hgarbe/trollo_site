<h1><%= @board.name %> - <%= @list.name %></h1>

<button class="ui secondary button">
<%= link_to 'Back To Lists', board_lists_path(@board) %>
</button>

<button class="ui secondary button">
<%= link_to 'Add Task', new_list_task_path(@list) %>
</button>
<hr />
<% @list.tasks.each do |task| %>
  <div class="ui cards">
  <div class="card">
    <div class="content">
      <div class="header"><%= @list.name %></h1></div>
      <div class="description">
      <%= render 'tasks/task', { task: task } %> 
      <%= link_to 'Edit', edit_list_task_path(@list, task) %> 
       <%= link_to 'Delete', list_task_path(@list, task), method: :delete %>
      </div>
    </div>
    <div class="ui bottom attached button">
      <i class="add icon"></i>
      <%= link_to 'Add Task', new_list_task_path(@list) %>
    </div>
  </div>
<% end %>
